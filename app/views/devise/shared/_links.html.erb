<div style='margin-top: 1em;'>
<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: 'ui basic button' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up with email & password", new_registration_path(resource_name), class: 'ui basic button' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'ui basic button' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Did not receive confirmation instructions?", new_confirmation_path(resource_name), class: 'ui basic button' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Did not receive unlock instructions?", new_unlock_path(resource_name), class: 'ui basic button' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: 'ui basic button' do %>
      <i class="icon google"></i> 
      Log in with Google
    <% end %>
  <% end -%>
<% end -%>
</div>